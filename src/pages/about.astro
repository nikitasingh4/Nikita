---
import Layout from "../layouts/Layout.astro";
import { aboutPageContent } from "../config";
import { Image } from "astro:assets";
import Timeline from "../components/Timeline.astro";
---

<Layout seo={aboutPageContent.seo}>
  <section class="mt-10 max-w-2xl mx-auto px-6">
    <h1 class="font-bold text-3xl mb-1">about</h1>
    <p class="opacity-60 ">{aboutPageContent.subtitle}</p>
    <div class="mb-14 whitespace-pre-wrap">
      {aboutPageContent.about.description}
    </div>
    <div class="flex flex-col min-[410px]:flex-row justify-center items-center gap-4">
      <Image
        src={aboutPageContent.about.image_l.url}
        alt={aboutPageContent.about.image_l.alt}
        width={250}
        height={250}
        class="w-[250px] h-[250px] object-cover rounded-xl -rotate-6"
      />
      <Image
        src={aboutPageContent.about.image_m.url}
        alt={aboutPageContent.about.image_m.alt}
        width={250}
        height={250}
        class="w-[250px] h-[250px] object-cover rounded-xl"
      />
      <Image
        src={aboutPageContent.about.image_r.url}
        alt={aboutPageContent.about.image_r.alt}
        width={250}
        height={250}
        class="w-[250px] h-[250px] object-cover rounded-xl rotate-6"
      />
    </div>
    <Timeline items={aboutPageContent.timeline.items} />
  </section>
</Layout>
