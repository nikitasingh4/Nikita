---
import { Icon } from "astro-icon/components";
import type { SocialLink } from "../types/config";

type Props = SocialLink;

const { url, icon, external } = Astro.props;
---

<a
  href={url}
  class="flex items-center gap-3 opacity-60 
         group-hover:opacity-30 hover:!opacity-100 
         transition-all duration-300 transform hover:scale-110"
  target={external ? "_blank" : "_self"}
>
  <Icon name={icon} width={25} height={25} />
  <!-- <FontAwesomeIcon icon={faXmark} width={25} height={25} /> -->
  <div>
    <!-- <p>{title}</p> -->
  </div>
</a>
